{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block content %}
<main role="main">
<div class="container">
   <div class="row">
    <div class="col-md-8 blog-main">
     
      <div class="blog-post" style="margin-top:100px;">
        <h2 class="blog-post-title">{{post.title}}</h2>
        <p class="blog-post-meta">{{post.createdAt|date('Y-m-d H:i:s')}} <a href="#">Mark</a></p>
        <hr>
        <p>{{post.content}}</p>
      </div><!-- /.blog-post -->
    </div><!-- /.blog-main -->
  </div> 
</div>    
</main>
    
{% endblock %}

